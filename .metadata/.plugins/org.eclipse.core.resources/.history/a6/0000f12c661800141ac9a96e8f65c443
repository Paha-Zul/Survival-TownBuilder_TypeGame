package com.mygdx.game.component.character

import com.mygdx.game.component.buildings.ResidenceScala
import com.mygdx.game.component.Component

class CharacterCompScala(owner : Entity, name : String, int type, boolean active) extends Component{

	var home : ResidenceScala = _;
	
	override def update(delta : Float) = {
		
	}
	
	override def setHome(home : ResidenceScala){
		this.home = home;
		this.home.addToResidence(this);
	}
	
	public ResidenceScala getHome(){
		return this.home;
	}
	
	public void setSleeping(boolean sleeping){
		this.sleeping = sleeping;
	}
	
	public boolean isSleeping(){
		return this.sleeping;
	}
}